
<%= text_field_tag 'word1', nil, id: 'word-1', class: 'form-control' %>
<br />
<%= text_field_tag 'word2', nil, id: 'word-2', class: 'form-control' %>
<br />
<div class="btn btn-danger" id="get-distance">Get Distance</div>
<br />
<span id="dist-display"></span>

<script>
    App.gamejs = {}
    App.gamejs.receive = function(data){
        $('#dist-display').html(data['render']);
    };
    $('#get-distance').click(function(){
        App.game.send({word1: $('#word-1').val(),
                       word2: $('#word-2').val()});
    });

</script>