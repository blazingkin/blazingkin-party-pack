<%= text_field_tag 'word-scramble-text-field', nil, placeholder: 'Scramble some words', class: 'form-control', id: 'wordscram-tf' %>
<br />
<div class="btn btn-danger" onclick="send_word()" id="wordscram-btn">Scramble!</div>

<script>
    App.gamejs = {}
    App.gamejs.receive = function(data){

    };
    $('#wordscram-btn').click(function(){
        send_word();
    });
    $("#wordscram-tf").keyup(function(event){
        if(event.keyCode == 13){
            $("#wordscram-btn").click();
        }
    });


    function send_word(){
        if ($('#wordscram-tf').val() != ''){
            App.game.send({word: $('#wordscram-tf').val()});
            $('#wordscram-tf').val('');
            $('#wordscram-tf').focus();
        }
    }
</script>