<%= render partial: 'shared/players', locals: {players: game_session.players} %>

<div class="row name-change-field">
    <div class="form-group">
        <label for="rename">Change your name</label>
        <input type="text" class="form-control" id="rename-entry"></input>
        <br />
        <div class="btn btn-danger form-control" id="rename-submit">Change your name</div>
    </div>
</div>

<script>
    $(document).on('turbolinks:load', function(){
        create_client_lobby_connection('<%= game_session.short_id %>');
    });
    $('#rename-submit').click(function(){
        App.lobby_info.send({event_type: 'player_rename', player_id: <%= player.uuid %>, new_name: $('#rename-entry').val()});
    });
</script>